<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h2>sign in</h2>
    </div>
    <div class="col-md-2"></div>
    <div class="container">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <%= form_tag sessions_path do %>
                <div class="form-group">
                    <%= label_tag :email, "email" %>
                    <%= email_field_tag :email, "", class: "form-control"%>
                </div>
                <div class="form-group">
                    <%= label_tag :password, "password" %>
                    <div class="form-group form-inline">
                        <%= password_field_tag :password, "", class: "form-control", size: 20%>

                        <%= submit_tag  "Sign In", class: "btn btn-primary"%>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
